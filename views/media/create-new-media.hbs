<div id="form-media">
    <form action="/media/create-new-media" method="POST" enctype="multipart/form-data">
    <label> Name
      <input type="text" name="name" required>
    </label>
      <br>
      <br>
    <label> Category
      <select name="category">
        <option>Anime</option>
        <option>Music</option>
        <option>Documentary</option>
        <option>Movie</option>
      </select>
    </label>
      <br>
      <br>
    <label> Description
      <input type="text" name="description" required>
    </label>
      <br>
      <br>
    <label> Genre
      <input type="text" name="genre" required>
    </label>
      <br>
      <br>
    <label> Year
      <input type="date" name="year" required>
    </label>
      <br>
      <br>
    <label> Director
      <input type="text" name="director" required>
    </label>
      <br>
      <br>
    <label>Image
      <input type="file" name="imageUrl" accept="image/*">
    </label>
      <br>
      <br>
        <button type="submit">Create</button>
    </form>
</div>