<h1>Movies</h1>
<div class="container mt-5">
  <div class="row">
{{#each moviesData}}
<div class="card" style="width:400px">
  <img class="card-img-top" src="{{imageUrl}}" alt="Card image">
  <div class="card-body">
    <h2 class="card-title">{{name}}</h2>
    <p class="card-text">{{description}}</p>
    <p class="card-text">Genre: {{genre}}</p>
    <p class="card-text">Year released: {{year}}</p>
    <p class="card-text">Director: {{director}}</p>
    <a href="/media/{{id}}" class="btn btn-primary">View More</a>
  </div>
</div>
{{/each}}
  </div> 